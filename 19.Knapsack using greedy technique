#include <stdio.h>

void knapsack(int n, float weight[], float profit[], float capacity) {
    float x[20], totalProfit = 0;
    int i, j;
    float temp;
    float ratio[20];
    for (i = 0; i < n; i++) {
        ratio[i] = profit[i] / weight[i];
    }
    for (i = 0; i < n; i++) {
        for (j = i + 1; j < n; j++) {
            if (ratio[i] < ratio[j]) {
                temp = ratio[j];
                ratio[j] = ratio[i];
                ratio[i] = temp;

                temp = weight[j];
                weight[j] = weight[i];
                weight[i] = temp;

                temp = profit[j];
                profit[j] = profit[i];
                profit[i] = temp;
            }
        }
    }
    for (i = 0; i < n; i++) {
        x[i] = 0.0;
    }
    for (i = 0; i < n; i++) {
        if (weight[i] > capacity) {
            break;
        } else {
            x[i] = 1.0;
            totalProfit += profit[i];
            capacity -= weight[i];
        }
    }

    if (i < n) {
        x[i] = capacity / weight[i];
        totalProfit += x[i] * profit[i];
    }

    printf("Maximum profit: %f\n", totalProfit);
}

int main() {
    int num;
    float weight[20], profit[20], capacity;
    printf("G.SHYAMALA 192211641");
	printf("Enter the number of items: ");
    scanf("%d", &num);

    printf("Enter the weights and profits of each item:\n");
    for (int i = 0; i < num; i++) {
        printf("Item %d - Weight: ", i + 1);
        scanf("%f", &weight[i]);
        printf("Item %d - Profit: ", i + 1);
        scanf("%f", &profit[i]);
    }

    printf("Enter the capacity of the knapsack: ");
    scanf("%f", &capacity);

    knapsack(num, weight, profit, capacity);

    return 0;
}
